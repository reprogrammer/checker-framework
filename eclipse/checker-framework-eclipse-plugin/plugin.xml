      id="checkers.eclipse.runlinear"
      name="Run Linear Checker">
    </command>
    <command
      categoryId="checkers.eclipse.category"
      defaultHandler="checkers.eclipse.actions.CheckerActions$I18nAction"
      id="checkers.eclipse.runi18n"
