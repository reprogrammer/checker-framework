<!--
  This is an Ant build file for compiling the Java Parser
-->
<project name="javaparser" default="dist" basedir=".">

    <description>
      Builds the java parser for JSR 308 index files.
    </description>

    <property name="src" value="src"/>
    <property name="build" value="build"/>
    <property name="java.source.version" value="1.5"/>

    <property file="build.properties"/>
    <property environment="env"/>

    <property name="javacc.home" value="${env.JAVACC_HOME}"/>
    <property name="dist.file" value="javaparser.jar"/>

    <target name="prep" description="Create required directories">
        <mkdir dir="${build}"/>
    </target>

    <target name="clean" description="Remove generated files">
        <delete dir="${build}"/>
        <delete file="${dist.file}"/>
    </target>

    <target name="gen-parser" description="Generate parser files">
        <javacc target="src/japa/parser/java_1_5.jj"
                javacchome="${javacc.home}" />
    </target>

    <target name="build" depends="prep" description="Compile files">
        <javac destdir="${build}" includeantruntime="false"
            source="${java.source.version}" target="${java.source.version}">
          <src path="${src}"/>
          <include name="**/*.java"/>
        </javac>
    </target>

    <target name="dist" depends="build" description="Create jar file">
        <jar destfile="${dist.file}" basedir="${build}"/>
    </target>

    <target name="javadoc" depends="build" description="Create Javadoc API documentation">
      <javadoc
	  destdir="docs/api">
	<fileset dir="src">
	  <include name="**/*.java"/>
	</fileset>
	<link href="http://developer.java.sun.com/developer/products/xml/docs/api/"/>
      </javadoc>
    </target>

    <target name="etags" depends="tags">
    </target>
    <target name="tags" description="Create Emacs TAGS table">
      <exec executable="/bin/sh">
	<arg value="-c"/>
	<arg value="etags `find -name '*.java' | sort-directory-order`"/>
      </exec>
    </target>

</project>
